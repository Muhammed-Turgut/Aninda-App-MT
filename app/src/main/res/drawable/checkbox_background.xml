<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Seçili durum -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#D72323"/> <!-- Arka plan -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Çerçeve -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Seçilmemiş durum -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/> <!-- Arka plan -->
            <stroke android:width="2dp" android:color="#D72323"/> <!-- Çerçeve -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
