<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- İç dolgu rengi -->
    <solid android:color="#FF6200EE" />

    <!-- Degrade çerçeve -->
    <stroke
        android:width="3dp"
        android:color="@android:color/transparent" /> <!-- Şeffaf bırak, altına gradient ekle -->

    <!-- Gradient tanımı (arka plan gibi görünmesi için kullanacağız) -->
    <gradient
        android:type="linear"
        android:useLevel="false"
        android:angle="0"
        android:startColor="#F4F4F4"
        android:endColor="#F4F4F4" />

    <!-- Boyut (isteğe bağlı) -->
    <size
        android:width="48dp"
        android:height="48dp" />
</shape>

