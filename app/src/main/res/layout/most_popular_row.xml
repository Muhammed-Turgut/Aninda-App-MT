<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_marginEnd="4dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/image_cricle_bg">

        <ImageView
            android:id="@+id/row_food_image"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_cricle_bg" />
    </FrameLayout>

    <TextView
        android:id="@+id/row_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="normal"
        android:fontFamily="@font/fira_sans_bold"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/row_food_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/row_food_image"
        app:layout_constraintTop_toBottomOf="@+id/row_food_image" />
</LinearLayout>